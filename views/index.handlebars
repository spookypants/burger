<div class="container">
    <div class="jumbotron">
        <h3>Welcome to</h3>
        <h1>Gabe's Ballin' Burger Bar</h1>
        <p>Order delicious burgers for consumption</p>
        <br>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Order Here</label>
                    <select data-placeholder="" id="newburger" name="burger">
                        <option value="NothingSelected">Please select a burger</option>
                        <option value="Hamburger">Hamburger</option>
                        <option value="Cheeseburger">Cheeseburger</option>
                        <option value="DoubleCheeseburger">Double Cheeseburger</option>
                        <option value="BBQBaconCheeseburger">BBQ Bacon Cheeseburger</option>
                        <option value="PoblanoBurger">Poblano Burger</option>
                        <option value="BLTBurger">BLT Burger</option>
                        <option value="DoubleCheeseburger">Double Cheeseburger</option>
                        <option value="Mac&CheeseBurger">Mac & Cheese Burger</option>
                        <option value="Borgar">Borgar</option>
                        <option value="Hamberder">Hamberder</option>
                    </select>

                    <button type="submit" class="btn btn-success" id="addburger">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong>
                    <p>Send order to cashier when ready for pickup</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Pick Up Your Burger</strong>
                    <p>Pick up your burger when delivered from the kitchen</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>